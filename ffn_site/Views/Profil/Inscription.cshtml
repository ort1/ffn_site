@{
    ViewBag.Title = "Inscription";
}

<div class="jumbotron">
    @using (Html.BeginForm("Inscription", "Profil", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("login", "Identifiant")
            @Html.TextBox("login", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("login_valid", "Identifiant (validation)")
            @Html.TextBox("login_valid", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("password", "Mot de passe")
            @Html.TextBox("password", "", new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Inscription" />
    }
</div>
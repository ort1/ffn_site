@{
    ViewBag.Title = "Connexion";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-8 col-sm-offset-2 col-md-offset-2">
            @using (Html.BeginForm("Connexion", "Profil", FormMethod.Post, new { role = "form" }))
            {
                <h2>Connexion</h2>
                <hr class="colorgraph">
                <div class="form-group">
                    @Html.TextBox("login", "", new
                {
                    required = true,
                    @class = "form-control input-lg",
                    placeholder = "Identifiant",
                    tabIndex = "1"
                })
                </div>
                <div class="form-group">
                    @Html.Password("password", "", new
                {
                    required = true,
                    @class = "form-control input-lg",
                    placeholder = "Mot de passe",
                    tabIndex = "2"
                })
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="Se connecter" class="btn btn-primary btn-block btn-lg" tabindex="6"></div>
                    <div class="col-xs-12 col-md-6">
                        @Html.ActionLink("S'inscrire", "Inscription", "Profil", new { @class = "btn btn-success btn-block btn-lg" })
                    </div>
                </div>
            }
        </div>
    </div>
    @if (ViewData["profilAdmin"] != null && (bool)ViewData["profilAdmin"])
    {
        <p>
            <div class="alert alert-info" role="alert">
                Profil Admin --> OK!
            </div>
        </p>
    }
    @if (ViewData["profilAdmin"] != null && !(bool)ViewData["profilAdmin"])
    {
        <p>
            <div class="alert alert-danger" role="alert">
                Profil Not Admin --> NOT OK!
            </div>
        </p>
    }
</div>

@{
    ViewBag.Title = "Connexion";
}

<div class="jumbotron">
    @using (Html.BeginForm("Connexion", "Profil", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("login", "Identifiant")
            @Html.TextBox("login", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("password", "Mot de passe")
            @Html.Password("password", "", new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Connexion" />
    }
    @if (ViewData["profilAdmin"] != null && (bool)ViewData["profilAdmin"])
    {
        <p>
            <div class="alert alert-info" role="alert">
                Profil Admin --> OK!
            </div>
        </p>
    }
    @if (ViewData["profilAdmin"] != null && !(bool)ViewData["profilAdmin"])
    {
        <p>
            <div class="alert alert-danger" role="alert">
                Profil Not Admin --> NOT OK!
            </div>
        </p>
    }
</div>
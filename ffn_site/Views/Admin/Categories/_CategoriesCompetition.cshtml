@using ffn_site.Models;

<h3>Catégories de compétitions</h3>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <td>Libellé</td>
                <td>Action</td>
            </tr>
        </thead>
        @using (Html.BeginForm("AddCatCompetition", "Admin", FormMethod.Post, new { role = "form" }))
        {
            <tr>
                <td>X</td>
                <td>
                    @Html.TextBox("lbl", "", new { required = true, @class = "form-control", placeholder = "Libellé" })
                </td>
                <td><input type="submit" value="Ajouter" class="btn btn-success"></td>
            </tr>
        }
        @foreach (CategorieCompetition catComp in ViewBag.catsComp)
        {
            using (Html.BeginForm("UpdateCatCompetition", "Admin", FormMethod.Post, new { role = "form" }))
            {
                <tr>
                    <td>
                        @Html.Hidden("id", catComp.id, new { required = true })
                        @catComp.id
                    </td>
                    <td>
                        @Html.TextBox("lbl", catComp.lbl, new { required = true, @class = "form-control" })
                    </td>
                    <td>
                        <input type="submit" value="Modifier" class="btn btn-warning">
                        @Html.ActionLink("Supprimer", "DeleteCatCompetition", "Admin", new { id = catComp.id }, new { @class = "btn btn-danger", role = "button" })
                    </td>
                </tr>
            }
        }
    </table>
</div>
